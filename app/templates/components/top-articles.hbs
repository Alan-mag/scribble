<div class="row">
  <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="panel panel-default top-article-panel">
        <div class="panel-heading" id="panels-blue">
          <h3 class="panel-title">Latest post</h3>
        </div>
        <div class="panel-body top-panel">
          <h2 class="top-article-title">{{article.title}}</h2>
          {{#link-to 'view-article' article.id}}<div id="top-img-container"><img src={{article.photo}}></div>{{/link-to}}
          <div><p>{{article.description}}</p></div>
        </div>
      </div>
    </div>
  <div class="col-md-2"></div>
</div>
